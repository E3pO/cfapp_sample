{
    "main":"public/javascripts/sample_app.js",
    "name":"Sample App",
    "description": "A sample application to get you started with CloudFlare apps",
    "version": "0.0.2a",
    "account": {
        "callback_url": "https://localhost:3000/api",
        "user_fields": ["email"]
    },
    "config":{
        "details":{
            "Price": "priceless",
            "Supporting": "cats"
        },
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
            "detail_page" : [
                "./public/images/example.png"
            ]
        },
        "interface": [
            {
                "type": "string",
                "name": "food",
                "description": "Please tell us your favorite food.",
                "domain_request": true
            },
            {
                "id": "lottery",
                "type": "select",
                "name": "Do you Lotto?",
                "description": "Choose whether to buy a ticket",
                "options": [
                    {
                        "label": "Yes, buy a ticket!",
                        "value": "true"
                    },
                    {
                        "label": "No, I am scared.",
                        "value": ""
                    }
                ]
            }
        ]
    }
}
